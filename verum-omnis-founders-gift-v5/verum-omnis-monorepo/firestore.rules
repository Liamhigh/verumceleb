rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all direct access
    // Only Cloud Functions can read/write
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Optionally, you can add specific rules for different collections
    // For example, allow public reads of receipts but only server writes:
    // match /receipts/{receiptId} {
    //   allow read: if true;
    //   allow write: if false;
    // }
  }
}
