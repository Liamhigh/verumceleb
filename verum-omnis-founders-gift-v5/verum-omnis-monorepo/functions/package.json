{
  "name": "verum-functions",
  "private": true,
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "./build.sh",
    "build:watch": "tsup src/index.ts --format=cjs --sourcemap --watch --outDir=.",
    "dev": "npm run build:watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "serve": "firebase emulators:start",
    "deploy": "npm run build && firebase deploy --only functions,hosting"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^5.0.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "p-timeout": "^7.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}
