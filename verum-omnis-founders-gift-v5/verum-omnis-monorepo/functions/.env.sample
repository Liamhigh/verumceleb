# Verum Omnis Functions â€” Environment Variables
# Copy this to .env for local development
# NEVER commit .env to version control

# ===================================================================
# Firebase Configuration
# ===================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_APP_ENV=development

# ===================================================================
# AI Model API Keys (Optional - degraded mode if absent)
# ===================================================================
# OpenAI API Key for GPT-4/GPT-3.5 triple-model verification
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key for Claude triple-model verification
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# DeepSeek API Key for DeepSeek triple-model verification
DEEPSEEK_API_KEY=sk-your-deepseek-key-here

# ===================================================================
# Blockchain Anchoring (Optional - no-op if absent)
# ===================================================================
# RPC URL for blockchain anchoring (e.g., Ethereum, Polygon)
ANCHOR_RPC_URL=https://your-rpc-url-here

# Private key for signing anchor transactions (KEEP SECRET!)
ANCHOR_PRIVATE_KEY=your-private-key-here

# ===================================================================
# Firestore Configuration (Optional - in-memory if absent)
# ===================================================================
# Firestore emulator host for local development
# FIRESTORE_EMULATOR_HOST=localhost:8080

# ===================================================================
# Security & Rate Limiting
# ===================================================================
# Rate limit per IP (requests per minute)
RATE_LIMIT_MAX=60

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW=60000

# ===================================================================
# Logging
# ===================================================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Pretty print logs in development (true/false)
LOG_PRETTY=true
