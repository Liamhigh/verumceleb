# Firebase Functions Environment Variables
# Copy this file to .env and fill in your values

# Required: Environment (prod|staging|local)
FIREBASE_APP_ENV=local

# Firebase Project
FIREBASE_PROJECT_ID=your-project-id

# OpenAI API Key (optional - for AI features)
OPENAI_API_KEY=

# DeepSeek API Key (optional - for AI features)
DEEPSEEK_API_KEY=

# Anthropic API Key (optional - for AI features)
ANTHROPIC_API_KEY=

# Blockchain Anchoring (optional)
# Leave empty to run in dry-run mode
ANCHOR_RPC_URL=
ANCHOR_PRIVATE_KEY=

# Note: Never commit .env files to git
# All API keys should be kept secure
